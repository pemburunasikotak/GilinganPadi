<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:padding="@dimen/dimen_16dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:background="@drawable/ic_form">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_nama_recyclerview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20dp"
            android:text="Calonsukses"
            style="@style/TitleTextOneRow"
             />

        <TextView
            android:id="@+id/item_alamat_recyclerview"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_14dp"
            android:layout_marginLeft="@dimen/size_20dp"
            style="@style/StandardTextOneRow"
            android:layout_marginTop="8dp"
            android:text="Calonsukses"
            android:textSize="@dimen/size_12dp" />
    </LinearLayout>
    <Button
        android:layout_alignParentRight="true"
        android:id="@+id/btn_ambil"
        android:layout_centerVertical="true"
        android:layout_width="74dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:background="@drawable/ic_bg_ambil"
        android:text="ambil"
        android:textSize="@dimen/size_12dp">

    </Button>


</RelativeLayout>