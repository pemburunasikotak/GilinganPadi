<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/warnaBagrond"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logolingkaran"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="115dp">

    </ImageView>

    <LinearLayout
        android:layout_marginTop="@dimen/size_20dp"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/size_20dp"
        android:layout_marginLeft="@dimen/size_20dp"
        android:background="@drawable/ic_form"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_text_email_login"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_width="match_parent"
            android:textColorHint="@android:color/holo_blue_light"
            android:textColor="@android:color/black"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:background="@null"
            android:layout_height="@dimen/size_40dp">
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/size_20dp"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/size_20dp"
        android:layout_marginLeft="@dimen/size_20dp"
        android:background="@drawable/ic_form"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_text_password_login"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_width="match_parent"
            android:hint="password"
            android:inputType="textPassword"
            android:background="@null"
            android:textColorHint="@android:color/holo_blue_light"
            android:textColor="@android:color/black"
            android:layout_height="@dimen/size_40dp">
        </EditText>
    </LinearLayout>



    <Button
        android:id="@+id/btn_masuk_layout_login"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/ic_masuk">
    </Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="@dimen/size_20dp"
        android:textAllCaps="true"
        android:text="OR"
        android:layout_gravity="center">

    </TextView>
    <Button
        android:id="@+id/btn_daftar_layout_login"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_daftar">
    </Button>



</LinearLayout>