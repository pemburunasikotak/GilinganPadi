<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_dialog"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dimen_16dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/warnaBagrond"
    tools:context=".pemilik.KonfirmasiPesananDialog">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/home_pemesan_png"/>
        <TextView
            android:layout_marginTop="@dimen/dimen_24dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:text="ISIKAN DATA"
            style="@style/TitleTextOneRow"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_marginTop="@dimen/dimen_24dp"
            android:background="@drawable/ic_form"
            android:padding="@dimen/dimen_12dp"
            android:inputType="text"
            android:id="@+id/edt_lokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/lokasi"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/holo_blue_light"
            android:autofillHints=""/>
        <EditText
            android:layout_marginTop="@dimen/dimen_24dp"
            android:background="@drawable/ic_form"
            android:padding="@dimen/dimen_12dp"
            android:id="@+id/edt_plat"
            android:layout_width="match_parent"
            android:inputType="text"
            android:layout_height="wrap_content"
            android:hint="Plat Nomor"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/holo_blue_light"
            android:autofillHints=""/>
        <Button
            android:id="@+id/btn_pesan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mulai"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/size_20dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_pesan"/>
    </LinearLayout>
</RelativeLayout>