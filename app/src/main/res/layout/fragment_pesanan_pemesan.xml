<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/warnaBagrond"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/maps"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="horizontal">

        <com.mapbox.mapboxsdk.maps.MapView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map_view"
            app:mapbox_cameraZoom="12"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="284dp"
        android:layout_marginTop="-30dp"
        android:background="@drawable/ic_rectangle_31"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_ldp_data"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_20dp"
            android:layout_marginTop="@dimen/size_20dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/masukkan_data_pesan"
            android:textAlignment="center"
            android:textStyle="bold">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginTop="@dimen/size_20dp"
            android:layout_marginRight="@dimen/size_20dp"
            android:background="@drawable/ic_form">

            <EditText
                android:id="@+id/et_ldp_inputlokasi"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40dp"
                android:layout_marginStart="@dimen/size_20dp"
                android:background="@null"
                android:hint="@string/lokasi"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/holo_blue_light"
                android:autofillHints=""/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginTop="@dimen/size_20dp"
            android:layout_marginRight="@dimen/size_20dp"
            android:background="@drawable/ic_form">

            <EditText
                android:id="@+id/et_ldp_jumlah"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40dp"
                android:layout_marginStart="@dimen/size_20dp"
                android:background="@null"
                android:hint="@string/masukkan_jumlah"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/holo_blue_light"
                android:autofillHints="1" />
        </LinearLayout>


        <!--        <EditText-->
        <!--            android:id="@+id/et_ldp_inputlokasi"-->
        <!--            android:layout_width="300dp"-->
        <!--            android:layout_height="30dp"-->
        <!--            android:layout_marginLeft="50dp"-->

        <!--            android:layout_marginTop="@dimen/size_17dp"-->
        <!--            android:background="@drawable/ic_form"-->
        <!--            android:hint="Masukkan lokasi">-->

        <!--        </EditText>-->

        <!--        <EditText-->
        <!--            android:id="@+id/et_ldp_jumlah"-->
        <!--            android:layout_width="300dp"-->
        <!--            android:layout_height="30dp"-->
        <!--            android:layout_marginLeft="50dp"-->
        <!--            android:layout_marginTop="@dimen/size_17dp"-->
        <!--            android:background="@drawable/ic_form"-->
        <!--            android:hint="Jumlah">-->

        <!--        </EditText>-->

        <Button
            android:id="@+id/btnEstimasi"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="@dimen/size_17dp"
            android:background="@null"
            android:text="@string/estimasi_biyaya"
            android:textAlignment="center">

        </Button>

        <TextView
            android:id="@+id/tvbiyayapesananPemilik"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_marginStart="115dp"
            android:layout_marginTop="@dimen/size_15dp"
            android:background="@drawable/ic_form"
            android:textAlignment="center" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_pesan_lpp"
        android:layout_width="300dp"
        android:layout_height="46dp"
        android:text="PESAN"
        android:textSize="@dimen/size_20dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/ic_pesan">

    </Button>


</LinearLayout>