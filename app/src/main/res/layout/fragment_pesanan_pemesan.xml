<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/warnaBagrond"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/maps"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <com.mapbox.mapboxsdk.maps.MapView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map_view"
            app:mapbox_cameraZoom="12" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_height="0dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_rectangle_31"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_ldp_data"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_20dp"
                        android:layout_marginTop="@dimen/size_20dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/masukkan_data_pesan"
                        android:textAlignment="center"
                        android:textStyle="bold">

                    </TextView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_20dp"
                        android:layout_marginTop="@dimen/size_20dp"
                        android:layout_marginRight="@dimen/size_20dp"
                        android:background="@drawable/ic_form">

                        <EditText
                            android:paddingTop="@dimen/dimen_12dp"
                            android:paddingBottom="@dimen/dimen_12dp"
                            android:id="@+id/et_ldp_inputlokasi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_20dp"
                            android:background="@null"
                            android:hint="@string/lokasi"
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/holo_blue_light"
                            android:autofillHints=""/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_20dp"
                        android:layout_marginTop="@dimen/size_20dp"
                        android:layout_marginRight="@dimen/size_20dp"
                        android:background="@drawable/ic_form">

                        <EditText
                            android:id="@+id/et_ldp_jumlah"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/dimen_12dp"
                            android:paddingBottom="@dimen/dimen_12dp"
                            android:layout_marginStart="@dimen/size_20dp"
                            android:background="@null"
                            android:inputType="number"
                            android:hint="@string/masukkan_jumlah"
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/holo_blue_light"
                            android:autofillHints="1" />
                    </LinearLayout>
                    <Button
                        android:id="@+id/btnEstimasi"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_marginTop="@dimen/size_17dp"
                        android:background="@null"
                        android:text="@string/estimasi_biyaya"
                        android:textAlignment="center">
                    </Button>
                    <TextView
                        android:id="@+id/tvbiyayapesananPemilik"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_12dp"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/dimen_16dp"
                        android:text="0"
                        android:textAlignment="center"
                        android:layout_marginTop="@dimen/size_15dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/ic_form"
                        tools:ignore="RtlCompat" />
                </LinearLayout>
                <Button
                    android:id="@+id/btn_pesan_lpp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PESAN"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/size_20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/ic_pesan"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>